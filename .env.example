# Network Configuration
HOST_IP=192.168.8.240
PRIMARY_DNS_IP=192.168.8.241
SECONDARY_DNS_IP=192.168.8.242
VIP_ADDRESS=192.168.8.245
NETWORK_INTERFACE=eth0
SUBNET=192.168.8.0/24
GATEWAY=192.168.8.1

# Timezone
TZ=America/New_York

# Pi-hole Configuration
PIHOLE_PASSWORD=ChangeThisSecurePassword123!
PIHOLE_DNS1=127.0.0.1#5335
PIHOLE_DNS2=127.0.0.1#5335
WEBPASSWORD=${PIHOLE_PASSWORD}

# Grafana
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=ChangeThisGrafanaPassword!

# Signal Notifications (add your webhook URL later)
# Using CallMeBot Signal API as the hosted webhook bridge
# To get your API key, send a message to +34 644 51 38 46 on Signal with "I allow callmebot to send me messages"
SIGNAL_WEBHOOK_URL=https://api.callmebot.com/signal/send.php
SIGNAL_PHONE_NUMBER=+1234567890
SIGNAL_API_KEY=your-api-key-here

# Keepalived
VRRP_PASSWORD=SecureVRRPPassword123!

# AI-Watchdog
WATCHDOG_CHECK_INTERVAL=30
WATCHDOG_RESTART_THRESHOLD=3
WATCHDOG_ALERT_COOLDOWN=300

# Prometheus
PROMETHEUS_RETENTION=30d

# Docker Networks
OBSERVABILITY_NETWORK=observability_net
DNS_NETWORK=dns_net