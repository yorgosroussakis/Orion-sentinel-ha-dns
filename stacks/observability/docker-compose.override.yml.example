  # Example: Add Grafana plugins
  # grafana:
  #   environment:
  #     - GF_INSTALL_PLUGINS=grafana-clock-panel,grafana-simple-json-datasource

  # Example: Override Signal webhook bridge settings
  # signal-webhook-bridge:
  #   environment:
  #     - SIGNAL_WEBHOOK_URL=https://custom-signal-service.com/api

  # Example: Add custom Prometheus scrape targets
  # prometheus:
  #   volumes:
