# CoreDNS Configuration for Backup DNS

. {
    # Forward to primary/secondary Pi-hole instances
    forward . 192.168.8.251 192.168.8.252 {
        max_fails 3
        expire 10s
        health_check 5s
    }
    
    # Enable caching
    cache 30
    
    # Enable DNSSEC validation
    dnssec
    
    # Logging
    log
    errors
    
    # Prometheus metrics
    prometheus :9153
    
    # Health check endpoint
    health :8080
}
