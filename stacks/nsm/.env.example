# Orion Sentinel NSM Stack Environment Configuration
# Copy this file to .env and customize for your environment

# ===========================
# Grafana Configuration
# ===========================

# Admin credentials for Grafana web UI
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme-secure-password

# Grafana root URL (set to your Pi's IP)
HOST_IP=192.168.8.100

# ===========================
# Pi-hole Integration
# ===========================

# Pi-hole API URL (DNS Pi #1)
# Used by AI service to automatically block risky domains
PIHOLE_API_URL=http://192.168.8.251/admin/api.php

# Pi-hole API token (get from Pi-hole UI: Settings → API → Show API token)
PIHOLE_API_TOKEN=

# ===========================
# Network Monitoring
# ===========================

# Network interface for Suricata to monitor
# Use the interface receiving port-mirrored traffic
MONITOR_INTERFACE=eth0

# ===========================
# AI Service Configuration
# ===========================

# Log level for AI service (DEBUG, INFO, WARNING, ERROR)
AI_LOG_LEVEL=INFO

# Anomaly detection threshold (0.0 - 1.0)
# Scores above this trigger alerts
AI_ANOMALY_THRESHOLD=0.7

# Domain risk threshold (0.0 - 1.0)
# Scores above this trigger automatic blocking
AI_RISK_THRESHOLD=0.8

# ===========================
# Loki Configuration
# ===========================

# Loki URL (usually Docker internal)
# Override if using external Loki instance
LOKI_URL=http://loki:3100

# Log retention period in hours (default: 720h = 30 days)
LOKI_RETENTION_HOURS=720

# ===========================
# Optional: SSO Integration
# ===========================

# Set to true to enable OAuth2/SSO for Grafana
SSO_ENABLED=false

# OAuth2 client credentials (if SSO enabled)
GRAFANA_OAUTH_CLIENT_SECRET=
