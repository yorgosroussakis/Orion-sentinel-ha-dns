{
  "id": null,
  "uid": "orion-sentinel-overview",
  "title": "Orion Sentinel â€“ Security Overview",
  "tags": ["security", "orion", "sentinel", "nsm"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h"]
  },
  "annotations": {
    "list": [
      {
        "datasource": "Loki",
        "enable": true,
        "expr": "{stream=\"intel_match\"}",
        "iconColor": "red",
        "name": "Threat Intel Matches",
        "tagKeys": "ioc_type,source"
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
      "type": "row",
      "title": "Suricata IDS Alerts"
    },
    {
      "id": 2,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 1},
      "type": "timeseries",
      "title": "Suricata Alerts Over Time (by Severity)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "sum by (alert_severity) (count_over_time({service=\"suricata\", event_type=\"alert\"} | json | __error__=\"\" [5m]))",
          "refId": "A",
          "legendFormat": "{{alert_severity}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["last", "max", "mean"]
        },
        "tooltip": {
          "mode": "multi"
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "showPoints": "never"
          },
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "critical"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}]
          },
          {
            "matcher": {"id": "byName", "options": "high"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "orange"}}]
          },
          {
            "matcher": {"id": "byName", "options": "medium"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "yellow"}}]
          },
          {
            "matcher": {"id": "byName", "options": "low"},
            "properties": [{"id": "color", "value": {"mode": "fixed", "fixedColor": "blue"}}]
          }
        ]
      }
    },
    {
      "id": 3,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 1},
      "type": "bargauge",
      "title": "Top Alert Signatures (Last 24h)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "topk(10, sum by (alert_signature) (count_over_time({service=\"suricata\", event_type=\"alert\"} | json | __error__=\"\" [$__range])))",
          "refId": "A",
          "legendFormat": "{{alert_signature}}"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 10, "color": "yellow"},
              {"value": 50, "color": "orange"},
              {"value": 100, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 9},
      "type": "table",
      "title": "Top Talkers (Source IPs)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "topk(15, sum by (src_ip) (count_over_time({service=\"suricata\"} | json | __error__=\"\" | src_ip != \"\" [24h])))",
          "refId": "A",
          "legendFormat": ""
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{"displayName": "Value", "desc": true}]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "src_ip"},
            "properties": [{"id": "displayName", "value": "Source IP"}]
          },
          {
            "matcher": {"id": "byName", "options": "Value"},
            "properties": [{"id": "displayName", "value": "Event Count"}]
          }
        ]
      }
    },
    {
      "id": 5,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 9},
      "type": "table",
      "title": "Recent Critical Alerts",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "{service=\"suricata\", event_type=\"alert\"} | json | alert_severity=~\"critical|high\" | line_format \"{{.timestamp}} | {{.src_ip}} -> {{.dest_ip}} | {{.alert_signature}}\"",
          "refId": "A",
          "maxLines": 20
        }
      ],
      "options": {
        "showHeader": true
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "indexByName": {},
            "renameByName": {
              "Line": "Alert Details"
            }
          }
        }
      ]
    },
    {
      "id": 10,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 17},
      "type": "row",
      "title": "DNS Activity (Pi-hole)"
    },
    {
      "id": 11,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 18},
      "type": "table",
      "title": "Top Queried Domains (Last 24h)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "topk(20, sum by (query) (count_over_time({service=\"pihole\"} | json | __error__=\"\" | query != \"\" [24h])))",
          "refId": "A",
          "legendFormat": ""
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{"displayName": "Query Count", "desc": true}]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "query"},
            "properties": [{"id": "displayName", "value": "Domain"}]
          },
          {
            "matcher": {"id": "byName", "options": "Value"},
            "properties": [{"id": "displayName", "value": "Query Count"}]
          }
        ]
      }
    },
    {
      "id": 12,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 18},
      "type": "table",
      "title": "Top DNS Clients (by Query Count)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "topk(15, sum by (client_ip) (count_over_time({service=\"pihole\"} | json | __error__=\"\" | client_ip != \"\" [24h])))",
          "refId": "A",
          "legendFormat": ""
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{"displayName": "Queries", "desc": true}]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "client_ip"},
            "properties": [{"id": "displayName", "value": "Client IP"}]
          },
          {
            "matcher": {"id": "byName", "options": "Value"},
            "properties": [{"id": "displayName", "value": "Queries"}]
          }
        ]
      }
    },
    {
      "id": 20,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 26},
      "type": "row",
      "title": "AI Anomaly Detection"
    },
    {
      "id": 21,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 27},
      "type": "table",
      "title": "Top Suspicious Devices (Anomaly Score)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "topk(10, max by (device_ip) (max_over_time({service=\"ai-device-anomaly\"} | json | __error__=\"\" | unwrap anomaly_score [24h])))",
          "refId": "A",
          "legendFormat": ""
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{"displayName": "Anomaly Score", "desc": true}]
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "filterable": true
          },
          "unit": "percentunit",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 0.6, "color": "yellow"},
              {"value": 0.8, "color": "red"}
            ]
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byName", "options": "device_ip"},
            "properties": [
              {"id": "displayName", "value": "Device IP"},
              {"id": "custom.width", "value": 150}
            ]
          },
          {
            "matcher": {"id": "byName", "options": "Value"},
            "properties": [
              {"id": "displayName", "value": "Anomaly Score"},
              {"id": "custom.cellOptions", "value": {"type": "color-background"}}
            ]
          }
        ]
      }
    },
    {
      "id": 22,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 27},
      "type": "timeseries",
      "title": "Device Anomaly Scores Over Time",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "max by (device_ip) (max_over_time({service=\"ai-device-anomaly\"} | json | __error__=\"\" | unwrap anomaly_score [5m]))",
          "refId": "A",
          "legendFormat": "{{device_ip}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 0.6, "color": "yellow"},
              {"value": 0.8, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 23,
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 35},
      "type": "table",
      "title": "High-Risk Domains (AI Domain Risk Scores)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "{service=\"ai-domain-risk\"} | json | __error__=\"\" | risk_score > 0.6 | line_format \"{{.domain}} | Score: {{.risk_score}} | First: {{.first_seen}} | Last: {{.last_seen}}\"",
          "refId": "A",
          "maxLines": 30
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{"displayName": "Risk Score", "desc": true}]
      },
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "source": "Line",
            "format": "auto"
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "filterable": true
          }
        }
      }
    },
    {
      "id": 30,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 43},
      "type": "row",
      "title": "Threat Intelligence"
    },
    {
      "id": 31,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 44},
      "type": "table",
      "title": "Recent Threat Intel IOCs",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "{stream=\"intel_iocs\"} | json | __error__=\"\" | line_format \"{{.value}} | Type: {{.ioc_type}} | Source: {{.source}} | Confidence: {{.confidence}} | First seen: {{.first_seen}}\"",
          "refId": "A",
          "maxLines": 50
        }
      ],
      "options": {
        "showHeader": true
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "Line": "IOC Details"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "filterable": true
          }
        }
      }
    },
    {
      "id": 32,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 44},
      "type": "table",
      "title": "Threat Intel Matches (Correlated)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "{stream=\"intel_match\"} | json | __error__=\"\" | line_format \"{{.match_time}} | IOC: {{.ioc_value}} ({{.ioc_type}}) | Device: {{.device_ip}} | Source: {{.source}} | Confidence: {{.confidence}}\"",
          "refId": "A",
          "maxLines": 30
        }
      ],
      "options": {
        "showHeader": true
      },
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "Line": "Match Details"
            }
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "filterable": true
          },
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 33,
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 52},
      "type": "text",
      "title": "Latest Community Intel Digest",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "{stream=\"community_intel_digest\"} | json | __error__=\"\" | line_format \"{{.summary_markdown}}\"",
          "refId": "A",
          "maxLines": 1
        }
      ],
      "options": {
        "mode": "markdown",
        "content": "Loading latest threat intelligence digest..."
      },
      "transformations": [
        {
          "id": "reduce",
          "options": {
            "mode": "reduceFields",
            "reducers": ["lastNotNull"]
          }
        }
      ]
    },
    {
      "id": 40,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 62},
      "type": "row",
      "title": "System Health & Metrics"
    },
    {
      "id": 41,
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 63},
      "type": "stat",
      "title": "Suricata Alert Rate (Last Hour)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "sum(count_over_time({service=\"suricata\", event_type=\"alert\"} [1h]))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 50, "color": "yellow"},
              {"value": 100, "color": "orange"},
              {"value": 200, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 42,
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 63},
      "type": "stat",
      "title": "DNS Queries (Last Hour)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "sum(count_over_time({service=\"pihole\"} [1h]))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "blue"}
            ]
          }
        }
      }
    },
    {
      "id": 43,
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 63},
      "type": "stat",
      "title": "AI Anomalies Detected (Last Hour)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "sum(count_over_time({service=~\"ai-device-anomaly|ai-domain-risk\"} | json | anomaly_score > 0.7 or risk_score > 0.7 [1h]))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 5, "color": "yellow"},
              {"value": 20, "color": "red"}
            ]
          }
        }
      }
    }
  ],
  "templating": {
    "list": []
  },
  "links": []
}
