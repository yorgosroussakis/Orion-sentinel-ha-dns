{
  "id": null,
  "uid": "orion-sentinel-threat-intel",
  "title": "Orion Sentinel â€“ Threat Intelligence",
  "tags": ["security", "orion", "sentinel", "threat-intel", "ioc"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "1m",
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["30s", "1m", "5m", "15m", "30m", "1h"]
  },
  "panels": [
    {
      "id": 1,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0},
      "type": "row",
      "title": "IOC Overview"
    },
    {
      "id": 2,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 1},
      "type": "timeseries",
      "title": "IOC Ingestion Timeline (by Source)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "sum by (source) (count_over_time({stream=\"intel_iocs\"} | json [5m]))",
          "refId": "A",
          "legendFormat": "{{source}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["last", "max", "mean"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 3,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 1},
      "type": "piechart",
      "title": "IOCs by Type (Last 7 Days)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "sum by (ioc_type) (count_over_time({stream=\"intel_iocs\"} | json [7d]))",
          "refId": "A",
          "legendFormat": "{{ioc_type}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "pieType": "donut",
        "tooltip": {
          "mode": "single"
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 4,
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 9},
      "type": "table",
      "title": "All Threat Intel IOCs (Filterable)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "{stream=\"intel_iocs\"} | json | line_format \"{{.value}}\t{{.ioc_type}}\t{{.source}}\t{{.confidence}}\t{{.first_seen}}\t{{.last_seen}}\t{{.tags}}\"",
          "refId": "A",
          "maxLines": 1000
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{"displayName": "Last Seen", "desc": true}]
      },
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "source": "Line",
            "format": "auto",
            "replace": true
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byRegexp", "options": ".*value.*"},
            "properties": [
              {"id": "displayName", "value": "IOC Value"},
              {"id": "custom.width", "value": 250}
            ]
          },
          {
            "matcher": {"id": "byRegexp", "options": ".*ioc_type.*"},
            "properties": [
              {"id": "displayName", "value": "Type"},
              {"id": "custom.width", "value": 100}
            ]
          },
          {
            "matcher": {"id": "byRegexp", "options": ".*source.*"},
            "properties": [
              {"id": "displayName", "value": "Source"},
              {"id": "custom.width", "value": 150}
            ]
          },
          {
            "matcher": {"id": "byRegexp", "options": ".*confidence.*"},
            "properties": [
              {"id": "displayName", "value": "Confidence"},
              {"id": "custom.width", "value": 100}
            ]
          },
          {
            "matcher": {"id": "byRegexp", "options": ".*first_seen.*"},
            "properties": [
              {"id": "displayName", "value": "First Seen"},
              {"id": "custom.width", "value": 150}
            ]
          },
          {
            "matcher": {"id": "byRegexp", "options": ".*last_seen.*"},
            "properties": [
              {"id": "displayName", "value": "Last Seen"},
              {"id": "custom.width", "value": 150}
            ]
          },
          {
            "matcher": {"id": "byRegexp", "options": ".*tags.*"},
            "properties": [
              {"id": "displayName", "value": "Tags"}
            ]
          }
        ]
      }
    },
    {
      "id": 10,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 19},
      "type": "row",
      "title": "Threat Intel Matches (Environment Correlation)"
    },
    {
      "id": 11,
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
      "type": "timeseries",
      "title": "Intel Matches Timeline (by IOC Type)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "sum by (ioc_type) (count_over_time({stream=\"intel_match\"} | json [5m]))",
          "refId": "A",
          "legendFormat": "{{ioc_type}}"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "calcs": ["last", "max", "sum"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "showPoints": "always"
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 12,
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
      "type": "bargauge",
      "title": "Matches by Source (Last 7 Days)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "sum by (source) (count_over_time({stream=\"intel_match\"} | json [7d]))",
          "refId": "A",
          "legendFormat": "{{source}}"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "continuous-RdYlGr",
            "reverse": true
          },
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 5, "color": "yellow"},
              {"value": 20, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 13,
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 28},
      "type": "table",
      "title": "All Intel Matches (Detailed View)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "{stream=\"intel_match\"} | json | line_format \"{{.match_time}}\t{{.ioc_value}}\t{{.ioc_type}}\t{{.source}}\t{{.device_ip}}\t{{.service}}\t{{.confidence}}\t{{.log_ref}}\"",
          "refId": "A",
          "maxLines": 500
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{"displayName": "Match Time", "desc": true}]
      },
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "source": "Line",
            "format": "auto",
            "replace": true
          }
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "left",
            "filterable": true
          }
        },
        "overrides": [
          {
            "matcher": {"id": "byRegexp", "options": ".*match_time.*"},
            "properties": [
              {"id": "displayName", "value": "Match Time"},
              {"id": "custom.width", "value": 150}
            ]
          },
          {
            "matcher": {"id": "byRegexp", "options": ".*ioc_value.*"},
            "properties": [
              {"id": "displayName", "value": "IOC Value"},
              {"id": "custom.width", "value": 200}
            ]
          },
          {
            "matcher": {"id": "byRegexp", "options": ".*ioc_type.*"},
            "properties": [
              {"id": "displayName", "value": "Type"},
              {"id": "custom.width", "value": 100}
            ]
          },
          {
            "matcher": {"id": "byRegexp", "options": ".*source.*"},
            "properties": [
              {"id": "displayName", "value": "Intel Source"},
              {"id": "custom.width", "value": 120}
            ]
          },
          {
            "matcher": {"id": "byRegexp", "options": ".*device_ip.*"},
            "properties": [
              {"id": "displayName", "value": "Device IP"},
              {"id": "custom.width", "value": 120}
            ]
          },
          {
            "matcher": {"id": "byRegexp", "options": ".*service.*"},
            "properties": [
              {"id": "displayName", "value": "Service"},
              {"id": "custom.width", "value": 100}
            ]
          },
          {
            "matcher": {"id": "byRegexp", "options": ".*confidence.*"},
            "properties": [
              {"id": "displayName", "value": "Confidence"},
              {"id": "custom.width", "value": 100}
            ]
          }
        ]
      }
    },
    {
      "id": 20,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 38},
      "type": "row",
      "title": "Community Intel Digest"
    },
    {
      "id": 21,
      "gridPos": {"h": 12, "w": 24, "x": 0, "y": 39},
      "type": "text",
      "title": "Latest Community Threat Intelligence Digest",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "{stream=\"community_intel_digest\"} | json | line_format \"# Threat Intelligence Digest\\n\\n**Time Range:** {{.time_range}}\\n\\n**Sources:** {{.sources}}\\n\\n**Keywords:** {{.keywords}}\\n\\n---\\n\\n{{.summary_markdown}}\"",
          "refId": "A",
          "maxLines": 1
        }
      ],
      "options": {
        "mode": "markdown",
        "content": "# Community Threat Intelligence Digest\n\nLoading latest digest from threat intelligence feeds...\n\n*This panel shows aggregated intelligence from community sources, analyzed and summarized automatically.*"
      }
    },
    {
      "id": 30,
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 51},
      "type": "row",
      "title": "Statistics & Metrics"
    },
    {
      "id": 31,
      "gridPos": {"h": 6, "w": 6, "x": 0, "y": 52},
      "type": "stat",
      "title": "Total IOCs (Last 7 Days)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "sum(count_over_time({stream=\"intel_iocs\"} [7d]))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "blue"}
            ]
          }
        }
      }
    },
    {
      "id": 32,
      "gridPos": {"h": 6, "w": 6, "x": 6, "y": 52},
      "type": "stat",
      "title": "Total Matches (Last 24h)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "sum(count_over_time({stream=\"intel_match\"} [24h]))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 1, "color": "yellow"},
              {"value": 10, "color": "orange"},
              {"value": 50, "color": "red"}
            ]
          }
        }
      }
    },
    {
      "id": 33,
      "gridPos": {"h": 6, "w": 6, "x": 12, "y": 52},
      "type": "stat",
      "title": "Unique Threat Sources",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "count(count by (source) (count_over_time({stream=\"intel_iocs\"} [7d])))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "purple"}
            ]
          }
        }
      }
    },
    {
      "id": 34,
      "gridPos": {"h": 6, "w": 6, "x": 18, "y": 52},
      "type": "stat",
      "title": "Match Rate (Last Hour)",
      "targets": [
        {
          "datasource": "Loki",
          "expr": "sum(count_over_time({stream=\"intel_match\"} [1h])) / 60",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "orientation": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"value": null, "color": "green"},
              {"value": 0.1, "color": "yellow"},
              {"value": 1, "color": "red"}
            ]
          }
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "source",
        "label": "Intel Source",
        "query": "label_values(source)",
        "datasource": "Loki",
        "multi": true,
        "includeAll": true,
        "current": {
          "text": "All",
          "value": "$__all"
        }
      },
      {
        "type": "query",
        "name": "ioc_type",
        "label": "IOC Type",
        "query": "label_values(ioc_type)",
        "datasource": "Loki",
        "multi": true,
        "includeAll": true,
        "current": {
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "links": [
    {
      "title": "Back to Security Overview",
      "url": "/d/orion-sentinel-overview",
      "type": "link",
      "icon": "dashboard"
    }
  ]
}
