# =============================================================================
# Orion Sentinel HA DNS - SECONDARY NODE (Node B) Configuration
# =============================================================================
# Use this on your SECONDARY Raspberry Pi (192.168.8.243)
# Copy to .env on the secondary node
# =============================================================================

# =============================================================================
# REQUIRED - Must be configured
# =============================================================================

# Pi-hole web interface password
# Generate with: openssl rand -base64 32
PIHOLE_PASSWORD=CHANGE_ME_REQUIRED

# VRRP authentication password (MUST BE SAME ON BOTH NODES)
# Generate with: openssl rand -base64 12
VRRP_PASSWORD=CHANGE_ME_REQUIRED

# Virtual IP address - floats between nodes (SAME AS PRIMARY)
VIP_ADDRESS=192.168.8.250

# =============================================================================
# SECONDARY NODE SETTINGS
# =============================================================================

# This is the SECONDARY (BACKUP) node
NODE_ROLE=BACKUP

# Lower priority than primary
KEEPALIVED_PRIORITY=150

# IP of the PRIMARY node for unicast VRRP
PEER_IP=192.168.8.249

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Network interface for VIP
NETWORK_INTERFACE=eth1

# VIP netmask
VIP_NETMASK=24

# Virtual router ID (must be same on both nodes)
VIRTUAL_ROUTER_ID=51

# Use unicast VRRP
USE_UNICAST_VRRP=true

# Timezone
TZ=Europe/London

# =============================================================================
# DNS FEATURES
# =============================================================================

# DNS over TLS to Quad9
DOT_ENABLED=true
DOT_UPSTREAM=9.9.9.9@853#dns.quad9.net

# Redis caching
REDIS_ENABLED=true

# DNSSEC validation
DNSSEC=true

# IPv6 support
IPV6=false

# Pi-hole theme
PIHOLE_THEME=default-dark

# =============================================================================
# MONITORING (optional)
# =============================================================================

# Loki URL for log shipping to CoreServices
LOKI_URL=

# Node identifier
NODE_NAME=orion-dns-secondary
